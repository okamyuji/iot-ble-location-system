<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 開発環境用: HTTP通信を許可 -->
    <!-- 本番環境ではHTTPSのみを使用し、この設定を削除してください -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- 特定のドメインに対する設定例（必要に応じてコメント解除） -->
